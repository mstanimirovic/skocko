<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<?import java.net.URL?>
<VBox alignment="CENTER" prefHeight="280" prefWidth="400" spacing="20" styleClass="dialog-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stanimirovic.skocko.ui.DialogController">
    <stylesheets>
        <URL value="@dialog.css" />
    </stylesheets>
    
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Title -->
    <Label fx:id="titleLabel" styleClass="dialog-title" text="WIN!" />

    <!-- Message -->
    <Label fx:id="messageLabel" alignment="CENTER" styleClass="dialog-message" text="You Won!" wrapText="true" />

    <!-- Secret combination (shown only on loss) -->
    <VBox fx:id="secretContainer" alignment="CENTER" spacing="10" visible="false" managed="false">
        <Label styleClass="dialog-secret-label" text="Secret Combination:" />
        <HBox alignment="CENTER" spacing="12">
            <StackPane fx:id="secret0" styleClass="slot-small">
                <Circle fx:id="secretCircle0" radius="18" />
            </StackPane>
            <StackPane fx:id="secret1" styleClass="slot-small">
                <Circle fx:id="secretCircle1" radius="18" />
            </StackPane>
            <StackPane fx:id="secret2" styleClass="slot-small">
                <Circle fx:id="secretCircle2" radius="18" />
            </StackPane>
            <StackPane fx:id="secret3" styleClass="slot-small">
                <Circle fx:id="secretCircle3" radius="18" />
            </StackPane>
        </HBox>
    </VBox>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnNewGame" defaultButton="true" onAction="#onNewGame" styleClass="dialog-button" text="NEW GAME" />
        <Button fx:id="btnClose" cancelButton="true" onAction="#onClose" styleClass="dialog-button-secondary" text="CLOSE" />
    </HBox>
</VBox>
